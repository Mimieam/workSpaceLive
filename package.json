{
  "name": "minimscrb",
  "version": "1.0.0",
  "description": "mini math scrabble game",
  "scripts": {
    "cleanup": "rm -rf .cache dist",
    "copy:static": "cp -r static/* dist/",
    "copy": "npm run copy:static",
    "prebuild": "rm -rf ./dist",
    "build:chrome": "web-ext run --source-dir ./dist --target chromium",
    "build:firefox-desktop": "web-ext run --source-dir ./dist --target firefox-desktop",
    "build": "node parcel.config.js && npm run copy",
    "serve": "npm run cleanup && parcel start app/manifest.json --no-source-maps",
    "serve:dev": "npm run cleanup && parcel serve -p 3000 app/manifest.json",
    "start:chrome": "web-ext run --source-dir ./dist --target chromium",
    "start": "npm run serve & npm run start:chrome"
  },
  "author": "Miezan Echimane",
  "license": "MIT",
  "dependencies": {
    "hyperapp": "^2.0.4",
    "mobx": "^5.15.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-dropzone": "^10.2.2",
    "react-sortablejs": "^2.0.11",
    "tailwindcss": "^1.2.0",
    "webextension-polyfill": "^0.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "autoprefixer": "^9.7.6",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-web-extension": "^1.6.1",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^2.0.0",
    "purgecss": "^2.1.2"
  },
  "resolutions": {
    "ws": "3.3.2"
  }
}
